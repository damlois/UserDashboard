        </div>

        <div>
            <select name="Country">
                <option>Country</option>
            </select>
        </div>

        <div>
            <label class="switch">
                <input type="checkbox" checked>
                <span class="slider round"></span>
            </label>
            <span>Show Country</span>
        </div>
    </div>

